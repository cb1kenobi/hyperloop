    <% for (var i = 0, iL = implementations.length; i < iL; i++) { %>
    <ClCompile Include="<%- implementations[i] %>"><%- pathToFilter(implementations[i]) %></ClCompile><% } %>
  </ItemGroup>
  <ItemGroup>
    <ClInclude Include="nan.h" />
    <ClInclude Include="Logger.h" />
    <ClInclude Include="hyperloop.h" />
    <ClInclude Include="ObjectGuid.h" />
    <ClInclude Include="JSBuffer.h" />
    <ClInclude Include="JSModule.h" />
    <ClInclude Include="JSPrivateObject.h" />
    <ClInclude Include="GeneratedApp.h" />
    <% for (var j = 0, jL = headers.length; j < jL; j++) { %>
    <ClInclude Include="<%- headers[j] %>"><%- pathToFilter(headers[j]) %></ClInclude><% } %>
  </ItemGroup>
  <ItemGroup>
    <Image Include="Assets\Logo.png" />
    <Image Include="Assets\SmallLogo.png" />
    <Image Include="Assets\StoreLogo.png" />
    <Image Include="Assets\SplashScreen.png" />
  </ItemGroup>
  <ItemGroup>
    <AppxManifest Include="Package.appxmanifest" />
  </ItemGroup>
  <ItemGroup>
    <% for (var i = 0, len = hyperloopFiles.length; i < len; i++) { %>
    <Text Include="<%= hyperloopFiles[i] %>"/><% } %>
    <None Include="PFX" />
  </ItemGroup>
  <ItemGroup>
    <Filter Include="Generated">
      <UniqueIdentifier>{82895fa5-0b94-48df-8d83-68f5068d4531}</UniqueIdentifier>
    </Filter>
  </ItemGroup>
</Project>
<%
function pathToFilter(path) {
	var split = path.split('/');
	return split.length === 1
		? ''
		: ('<Filter>' + split[0] + '</Filter>');
}
%>